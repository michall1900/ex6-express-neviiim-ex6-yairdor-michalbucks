<%- include('includes/head.ejs')%>
<%- include('includes/login_and_register_start.ejs')%>
<div class="row text-center justify-content-center">
    <form class="col-6 " id="register-form" action="/users/register-password" method="post">
        <div class="row text-center justify-content-center">
            <input name="password1" id="password1" type="password" placeholder="Enter Password" class="form-control col-12">
            <input name="password2" id="password2" type="password" placeholder="Enter Confirmed Password" class="form-control col-12 mt-2d">
