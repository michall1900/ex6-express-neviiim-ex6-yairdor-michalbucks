
<%- include('includes/head.ejs')%>
<%- include('includes/login_and_register_start.ejs')%>
<div class="row text-center justify-content-center">
  <form class="col-6" id="login-form" action="/" method="post">
    <div class="row text-center justify-content-center">
      <label for="email"></label>
      <input id="email" name="email" type="email" placeholder="Enter Email" class="form-control col-12 mt-2" required
             pattern='^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$'
             maxlength="32">
      <label for="password"></label>
      <input id="password" type="password" name="password" placeholder="Enter Password" class="form-control col-12 mt-2"
      maxlength="32" required>
      <input type="submit" value="Sign In" class="btn btn-primary col-4 mt-2" required>
    </div>
  </form>
  <p class="col-12 mt-5">
    Click here to <a href="/users/register">register</a>
  </p>
</div>
</div>
<%- include('includes/end.ejs')%>
